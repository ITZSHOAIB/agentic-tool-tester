{
  "name": "typescript-library-starter",
  "version": "0.0.0",
  "description": "A starter template for TypeScript libraries ready to be published to npm.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": ["dist"],
  "scripts": {
    "build": "pnpm clean && tsc",
    "clean": "rimraf dist",
    "format": "biome format --write",
    "lint": "biome check --fix",
    "lint:staged": "lint-staged",
    "prepare": "npx simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.14.1",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": ["typescript", "library", "starter", "template", "npm", "biome"],
  "author": "Sohab Sk",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ITZSHOAIB/typescript-library-starter"
  },
  "lint-staged": {
    "*": ["pnpm lint", "git add"]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm typecheck && pnpm lint:staged"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "sideEffects": false
}
